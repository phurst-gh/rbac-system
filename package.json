{
  "name": "rbac-auth-api-gateway",
  "version": "1.0.0",
  "description": "Showcases a production secrure RBAC system",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "format": "biome format --write .",
