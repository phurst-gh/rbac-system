# =============================================================================
# RBAC System Environment Configuration
# =============================================================================

# Application Configuration
APP_STAGE=dev
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rbac_system
POSTGRES_PASSWORD=your_postgres_password

# JWT Configuration (Generate new secrets for production!)
JWT_ACCESS_SECRET=your_64_character_access_secret_here_replace_with_crypto_generated
JWT_REFRESH_SECRET=your_64_character_refresh_secret_here_replace_with_crypto_generated
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# =============================================================================
# Production Example (copy to .env.prod)
# =============================================================================
# APP_STAGE=prod
# NODE_ENV=production
# COOKIE_DOMAIN=yourdomain.com
# COOKIE_SECURE=true
# COOKIE_HTTP_ONLY=true
# COOKIE_SAME_SITE=strict